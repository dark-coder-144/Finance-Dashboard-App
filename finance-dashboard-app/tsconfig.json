{
  "compilerOptions": {
    "paths":{
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "client/src/components", "client/src/scenes", "client/src/state", "client/src/App.tsx", "client/src/expanded-theme.ts", "client/src/main.tsx", "client/src/theme.ts", "client/src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
